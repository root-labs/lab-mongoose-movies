<h2>New Movie</h2>

<form action="/movies/new" method="post">
  <div class="mb-3">

    <input placeholder="title" id="title" name="title" />
  </div>
  <div class="mb-3">
    <input placeholder="genre" id="genre" name="genre" />
  </div>
  <div class="mb-3">
    <input placeholder="plot" id="plot" name="plot" />
  </div>

  <div class="mb-3">
    <select name="cast" id="cast" multiple>
      {{#each celebrities}}
        <option value="{{name}}">{{name}}</option>

      {{/each}}

    </select>
  </div>
  <button type="submit">Add Movie</button>
</form>